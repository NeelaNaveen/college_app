<h1>Listing departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Office</th>
	  <th>professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.office %>
		 <td><% department.professors.each do |prof| %>
           <%= prof.name %>
		   <% end %>
		   </td>
	   <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path %>


<%= form_tag do %>
	<input type= "checkbox" value="yes"/>yes
	<input type= "checkbox" value="no"/>no
<input id="age_child" name="age" type="radio" value="child" />
<label for="age_child">I am younger than 21</label>
